function paf_render_deal_documents_shortcode( $atts ) {
    $atts    = shortcode_atts( [ 'deal_id' => 0 ], $atts );
    $deal_id = intval( $atts['deal_id'] );

    if ( ! $deal_id ) {
        return '<p>No deal ID provided.</p>';
    }

    $docs_args = [
        'post_type'      => 'paf_document',
        'meta_key'       => '_deal_post_id',
        'meta_value'     => $deal_id,
        'posts_per_page' => -1,
